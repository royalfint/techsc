<% include ../header %>

<section class="grid container">
    <div>
        <h1>Наши Публикации</h1>
        <% posts.forEach(function(post) { %>
            <div>
                <img src="<%= post.image[0].replace(" ","%20") %>">
                <h3><%= post.title %></h3>
                <p><%= post.desc %></p>
                <a href="/posts/<%= post._id %>" class="btn">Посмотреть</a>
            </div>
        <% }); %>
    </div>
</section>

    <section style="margin-top: 1rem;" class="callback container">
        <div>
            <img src="img/contact.jpg" class="shadow" alt="">
            <div>
                <h1>Заказать обратный звонок</h1>
                <p class="sub">Оставьте заявку прямо сейчас и получите бесплатную консультацию.</p>
                <form>
                    <div>
                        <p>Ваше имя</p>
                        <input id="consultname" type="text">
                    </div>
                    <div>
                        <p>Ваш e-mail</p>
                        <input id="consultemail" type="email">
                    </div>
                    <button class="btn btn-yellow" id="getConsult">Получить консультацию</button>
                    <div style="position: relative; width: 100%; ">
                        <span id="callbackmsg" class="success">Ваша заявка принята! Мы ответим в ближайшее время.</span>
                        <span id="callbackerror" class="success"></span>
                    </div>
                </form>
            </div>
        </div>
    </section>

<% include ../footer %>